[init]
	defaultBranch = main

[gpg]
	program = /opt/homebrew/bin/gpg
	format = openpgp

[gpg "ssh"]
	program = /usr/bin/ssh
	allowedSignersFile = ~/.config/git/allowed_signers

[push]
	default = simple

[pull]
	rebase = true

[core]
	editor = hx
	excludesfile = ~/.gitignore_global

[diff]
	tool = delta

[merge]
	tool = delta

[commit]
	gpgSign = true

[tag]
	forceSignAnnotated = true

[delta]
	navigate = true
	light = false
	features = side-by-side line-numbers decorations
	# Dracula Pro colors from official XML for perfect consistency
	syntax-theme = base16
	plus-style = "#8AFF80"
	minus-style = "#FF80BF"
	plus-emph-style = "#8AFF80 bold"
	minus-emph-style = "#FF80BF bold"
	line-numbers-plus-style = "#8AFF80"
	line-numbers-minus-style = "#FF80BF"
	line-numbers-zero-style = "#7970A9"
	whitespace-error-style = "#F83333 reverse"
	file-style = "#E6DB74 bold"
	hunk-header-style = "#9580FF bold"

[delta "decorations"]
	commit-decoration-style = "#FFFF80 bold box ul"
	file-style = "#E6DB74 bold ul"
	file-decoration-style = none
	hunk-header-decoration-style = "#80FFEA box ul"